{
  "expo": {
    "name": "FinchApp",
    "slug": "FinchApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "app/assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "app/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "app/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [

        "expo-camera",
        {
          "cameraPermission": "Allow FinchApp to access your camera",
          "microphonePermission": "Allow FinchApp to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "image": "app/assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    }
  }
}
